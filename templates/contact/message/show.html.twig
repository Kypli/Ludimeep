{% extends 'base.html.twig' %}

{% block title %}Message{% endblock %}

{% block body %}
	<h1>Message</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ message.id }}</td>
			</tr>
			<tr>
				<th>Ip</th>
				<td>{{ message.ip }}</td>
			</tr>
			<tr>
				<th>Libelle</th>
				<td>{{ message.libelle }}</td>
			</tr>
			<tr>
				<th>Description</th>
				<td>{{ message.description }}</td>
			</tr>
			<tr>
				<th>Lu</th>
				<td>{{ message.lu ? 'Yes' : 'No' }}</td>
			</tr>
			<tr>
				<th>Date</th>
				<td>{{ message.date ? message.date|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('message_index') }}">back to list</a>

	<a href="{{ path('message_edit', {'id': message.id}) }}">edit</a>

	{{ include('message/_delete_form.html.twig') }}
{% endblock %}
