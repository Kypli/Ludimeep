<section class='section-middle col-xs-12 col-sm-12 col-md-12 col-lg-6'>
	<h4 class="radius-long offset-2 col-8">Actualités</h4>

	{# BOUCLE ACTUS #}
	{% for actu in actus %}
		<div class='mb-3 souligne'>{{ actu.titre|raw }}</div>

		{# BOUCLE ÉLÉMENTS PAR ORDRE #}
		{% for log in actu.ordre|split('_') %}

			{# TEXTES #}
			{% if log == 't1' %}
				<div class='mb-3 {{ actu.text1Class }}'>{{ actu.text1|raw }}</div>
			{% elseif log == 't2' %}
				<div class='mb-3 {{ actu.text2Class }}'>{{ actu.text2|raw }}</div>
			{% elseif log == 't3' %}
				<div class='mb-3 {{ actu.text3Class }}'>{{ actu.text3|raw }}</div>
			{% elseif log == 't4' %}
				<div class='mb-3 {{ actu.text4Class }}'>{{ actu.text4|raw }}</div>
			{% elseif log == 't5' %}
				<div class='mb-3 {{ actu.text5Class }}'>{{ actu.text5|raw }}</div>
			{% elseif log == 't6' %}
				<div class='mb-3 {{ actu.text6Class }}'>{{ actu.text6|raw }}</div>

			{# PHOTOS #}
			{% elseif log == 'p1' %}
				<div class='mb-3'>
					<img id="myImg" class="img_event" src="{{ asset('build/image/actu/' ~ actu.photo1) }}" alt="{{ actu.photo1Alt }}">
				</div>
			{% elseif log == 'p2' %}
				<div class='mb-3'>
					<img id="myImg" class="img_event" src="{{ asset('build/image/actu/' ~ actu.photo2) }}" alt="{{ actu.photo2Alt }}">
				</div>
			{% elseif log == 'p2' %}
				<div class='mb-3'>
					<img id="myImg" class="img_event" src="{{ asset('build/image/actu/' ~ actu.photo3) }}" alt="{{ actu.photo3Alt }}">
				</div>
			{% endif %}
		{% endfor %}

		{# AUTEUR #}
		<div class='mb-3 taille11 alignRight italique'>
			Par {{ actu.auteur.prenom|capitalize }} {{ actu.auteur.nom|upper }} - {{ actu.date|date('d/m/Y à H:i') }}
		</div>

		{# BARRE DE SÉPARATION #}
		{{  loop.last ? '' : '<hr>' }}
	{% endfor %}
</section>