{{ form_start(form) }}

	{% set label = 'col-5 offset-1 mb-4 alignRight' %}
	{% set widget = 'col-3 mb-4' %}

	{# PROFIL #}
	{% if edit %}
		<div class="row center mt-4">
			<div class="col-4 offset-4 mb-4 souligne">
				Profil
			</div>
		</div>

		<div class="row center mt-4">

			{# NOM #}
			<div class="{{ label }}">
				{{ form_label(form.userProfil.nom) }}
			</div>
			<div class="{{ widget }}">
				{{ form_widget(form.userProfil.nom) }}
			</div>

			{# PRENOM #}
			<div class="{{ label }}">
				{{ form_label(form.userProfil.prenom) }}
			</div>
			<div class="{{ widget }}">
				{{ form_widget(form.userProfil.prenom) }}
			</div>

			{# MAIL #}
			<div class="{{ label }}">
				{{ form_label(form.userProfil.mail) }}
			</div>
			<div class="{{ widget }}">
				{{ form_widget(form.userProfil.mail) }}
			</div>

			{# ADRESSE #}
			<div class="{{ label }}">
				{{ form_label(form.userProfil.adresse) }}
			</div>
			<div class="col-5 mb-4">
				{{ form_widget(form.userProfil.adresse) }}
			</div>

			{# VILLE #}
			<div class="{{ label }}">
				{{ form_label(form.userProfil.ville) }}
			</div>
			<div class="{{ widget }}">
				{{ form_widget(form.userProfil.ville) }}
			</div>

			{# CODE POSTAL #}
			<div class="{{ label }}">
				{{ form_label(form.userProfil.codePostal) }}
			</div>
			<div class="{{ widget }}">
				{{ form_widget(form.userProfil.codePostal) }}
			</div>

			{# PAYS #}
			<div class="{{ label }}">
				{{ form_label(form.userProfil.pays) }}
			</div>
			<div class="{{ widget }}">
				{{ form_widget(form.userProfil.pays) }}
			</div>

			{# TÉLÉPHONE #}
			<div class="{{ label }}">
				{{ form_label(form.userProfil.telephone) }}
			</div>
			<div class="{{ widget }}">
				{{ form_widget(form.userProfil.telephone) }}
			</div>
		</div>
	{% endif %}

	{# SITE INTERNET #}
	{% if edit %}
		<div class="row center mt-5">
			<div class="col-4 offset-4 mb-4 souligne">
				Site internet
			</div>
		</div>
	{% endif %}

	<div class="row center mt-4">

		{# LOGIN #}
		{% if edit == false or is_granted('ROLE_ADMIN') %}
			<div class="{{ label }}">
				{{ form_label(form.userName) }}
			</div>
			<div class="{{ widget }}">
				{{ form_widget(form.userName) }}
			</div>
		{% endif %}

		{# MOT DE PASSE #}
		{% if edit == false or is_granted('ROLE_ADMIN') or user.id == app.user.id %}
			<div class="{{ label }}">
				{{ edit == false ? form_label(form.password) : 'Changer le mot de passe' }}
			</div>
			<div class="{{ widget }}">
				{{ form_widget(form.password) }}
			</div>
		{% endif %}

		{% if edit %}

			{# ADMIN #}
			{% if is_granted('ROLE_ADMIN') %}
				<div class="{{ label }}">
					{{ form_label(form.admin) }}
				</div>
				<div class="{{ widget }} pt-2">
					{{ form_widget(form.admin) }}
				</div>
				<div class="{{ label }}">
					{{ form_label(form.anonyme) }}
				</div>
				<div class="{{ widget }} pt-2">
					{{ form_widget(form.anonyme) }}
				</div>
				<div class="{{ label }}">
					{{ form_label(form.ip) }}
				</div>
				<div class="{{ widget }}">
					{{ form_widget(form.ip) }}
				</div>
				<div class="{{ label }}">
					{{ form_label(form.accesPhoto) }}
				</div>
				<div class="{{ widget }} pt-2">
					{{ form_widget(form.accesPhoto) }}
				</div>
				<div class="{{ label }}">
					{{ form_label(form.accesPhotoLanceurAlerte) }}
				</div>
				<div class="{{ widget }} pt-2">
					{{ form_widget(form.accesPhotoLanceurAlerte) }}
				</div>

				{# COMMENTAIRE #}
				<div class="{{ label }}">
					{{ form_label(form.commentaire) }}
				</div>
				<div class="col-5 mb-4">
					{{ form_widget(form.commentaire) }}
				</div>
			{% endif %}

			{# NEWSLETTER #}
			<div class="{{ label }}">
				{{ form_label(form.newsletter) }}
			</div>
			<div class="{{ widget }} pt-2">
				{{ form_widget(form.newsletter) }}
			</div>
		{% endif %}
	</div>

	{# ASSOCIATION #}
	{% if edit %}
		<div class="row center mt-5">
			<div class="col-4 offset-4 mb-4 souligne">
				Association Ludi-Meep'
			</div>
		</div>

		<div class="row center mt-4">

			{# ADHERANT #}
			{% if is_granted('ROLE_ADMIN') %}
				<div class="{{ label }}">
					{{ form_label(form.userAsso.adherant) }}
				</div>
				<div class="{{ widget }}">
					{{ form_widget(form.userAsso.adherant) }}
				</div>

				{# DATE INSCRIPTION #}
				<div class="{{ label }}">
					{{ form_label(form.userAsso.dateInscription) }}
				</div>
				<div class="{{ widget }}">
					{{ form_widget(form.userAsso.dateInscription) }}
				</div>

				{# DATE FIN ADHÉSION #}
				<div class="{{ label }}">
					{{ form_label(form.userAsso.dateFinAdhesion) }}
				</div>
				<div class="{{ widget }}">
					{{ form_widget(form.userAsso.dateFinAdhesion) }}
				</div>
			{% endif %}

			{# DROIT IMAGE #}
			<div class="{{ label }}">
				{{ form_label(form.userAsso.droitImage) }}
			</div>
			<div class="{{ widget }} pt-2">
				{{ form_widget(form.userAsso.droitImage) }}
			</div>

			{# NOTORIETE #}
			<div class="{{ label }}">
				{{ form_label(form.userAsso.notoriete) }}
			</div>
			<div class="col-4 mb-4">
				{{ form_widget(form.userAsso.notoriete) }}
			</div>

			{% if is_granted('ROLE_ADMIN') %}

				{# ROLE CA #}
				<div class="{{ label }}">
					{{ form_label(form.userAsso.roleCa) }}
				</div>
				<div class="{{ widget }}">
					{{ form_widget(form.userAsso.roleCa) }}
				</div>

				{# DATE FIN MANDAT #}
				<div class="{{ label }}">
					{{ form_label(form.userAsso.dateFinMandat) }}
				</div>
				<div class="{{ widget }}">
					{{ form_widget(form.userAsso.dateFinMandat) }}
				</div>

				{# MEMBRE D'HONNEUR #}
				<div class="{{ label }}">
					{{ form_label(form.userAsso.membreHonneur) }}
				</div>
				<div class="{{ widget }} pt-2">
					{{ form_widget(form.userAsso.membreHonneur) }}
				</div>
			{% endif %}
		{% endif %}

		{{ form_widget(form) }}

		<div class="col-6 offset-3 mt-4 mb-4">
			<button class="btn btn-success">{{ button_label|default("S'enregistrer") }}</button>
		</div>
	</div>
{{ form_end(form) }}