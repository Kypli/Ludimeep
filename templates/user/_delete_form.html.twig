<form
    method="post"
    action="{{ path('user_delete', {'id': user.id}) }}"
    onsubmit="return confirm('Êtes-vous sûr et certain de vouloir supprimer votre profil ? Attention, cette action est irréversible !!!');"
>
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
    <button class="btn btn-danger">
        <i class="fa fa-times"></i>
        Supprimer définitivement mon profil
    </button>
</form>
