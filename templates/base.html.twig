<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">

		<title>Ludi-Meep' - {% block title %}Bienvenue{% endblock %}</title>

		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			<script type="text/javascript" src="{{ asset('/jquery/jquery_3.6.0_min.js') }}"></script>
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	<body>

		{# HEADER #}
		{% block header %}{% include 'header.html.twig' %}{% endblock %}

		{# MESSAGES FLASH SUCCESS #}
		{% for message in app.flashes('success') %}
			<div class="flash-notice mt-3 mb-3 bg-success text-center text-white">
				Succ√®s : {{ message }}
			</div>
		{% endfor %}

		{# MESSAGES FLASH ERROR #}
		{% for message in app.flashes('error') %}
			<div class="flash-notice mt-3 mb-3 bg-danger text-center text-white">
				Erreur : {{ message }}
			</div>
		{% endfor %}
		
		{# BODY #}
		{% block body %}{% endblock %}

		{# FOOTER #}
		{% block footer %}{% include 'footer.html.twig' %}{% endblock %}
	</body>
</html>