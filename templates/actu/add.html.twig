{% extends 'base.html.twig' %}

{% block title %}Ajout d'une actualité{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	{{ encore_entry_link_tags('actu') }}
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	{{ encore_entry_script_tags('actu') }}
	<script src="https://cdn.tiny.cloud/1/vbt8ywy30jug70hnrks27w80qgscblebr0xj6k5ktlsmae7g/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>
{% endblock %}

{% block body %}

	<div class="container">
		<div class='row mb-3'>

			{# TITRE #}
			<h2 class="radius-long offset-4 col-4">Ajout d'une actualité</h2>

			{# INSCRIPTION #}
			<section class='form mb-3'>

				<div class='col-2 mb-3'>
					<a href="{{ path('actu') }}">Retour à la liste</a>
				</div>

				{% include 'actu/_form.html.twig' with {'edit': false} %}
			</section>
		</div>
	</div>
{% endblock %}
