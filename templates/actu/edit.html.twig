{% extends 'base.html.twig' %}

{% block title %}Modification d'une actualité{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	{{ encore_entry_link_tags('modal_photo') }}
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	{{ encore_entry_script_tags('modal_photo') }}
{% endblock %}

{% block body %}

	<div class="container">
		<div class='row mb-3'>

			{# TITRE #}
			<h2 class="radius-long offset-4 col-4">Modification d'une actualité</h2>

			{# INSCRIPTION #}
			<section class='form mb-3'>

				<div class='col-2 mb-3'>
					<a href="{{ path('actu') }}">Retour à la liste</a>
				</div>

				{% set edit = {'edit': true, 'metaDatas': metaDatas, 'button_label': 'Modifier'} %}
				{% include 'actu/_form.html.twig' with edit %}
			</section>

			{# MODAL PHOTO #}
			{% include 'photo/_modal.html.twig' %}
		</div>
	</div>
{% endblock %}
