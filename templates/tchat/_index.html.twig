<div class='col-12 mb-4'>

	{# TITRE #}
	{% include 'home/_titre.html.twig' with {'titre': "Mini-tchat" } %}

	<div class='card tchat'>
		<div class="row">
			{% if tchats is not empty %}

				{# MESSAGES #}
				<ul id='tchat_ul'>
					{% for t in tchats %}
						{% include 'tchat/_message.html.twig' %}
					{% endfor %}
				</ul>
			{% else %}
				<div class="row">
					<div class="offset-1 col-10">
						Pas de messages
					</div>
				</div>
			{% endif %}
		</div>
	</div>

	{# FORM #}
	<div class="row mt-2">
		<div class="offset-1 col-10">
			{% if is_granted('ROLE_USER') %}
				{% include 'tchat/_form.html.twig' %}
			{% endif %}
		</div>
	</div>
</div>