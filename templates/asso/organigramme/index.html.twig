{% extends 'base.html.twig' %}

{% block stylesheets %}
	{{ parent() }}
	{{ encore_entry_link_tags('photo') }}
	{{ encore_entry_link_tags('modal_photo') }}
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	{{ encore_entry_script_tags('photo') }}
	{{ encore_entry_script_tags('modal_photo') }}
{% endblock %}

{% block title %}Asso - Organigramme{% endblock %}

{% block body %}

	<div class="container">
		<div class='row mb-3'>

			{# TITRE #}
			<h2 class="radius-long offset-4 col-4">{{ old is defined ? 'Ancien organigramme' : 'Organigramme' }}</h2>

			{# OLD #}
			<div class='row'>
				<div class='col-5'>
					{% if old is not defined %}
						<a href="{{ path('orga_old') }}">
							<div class="btn btn-info mb-2">
								Voir les anciens mandataires
							</div>
						</a>
					{% else %}
						<a href="{{ path('orga') }}">
							<div class="btn btn-info mb-2">
								Retour
							</div>
						</a>
					{% endif %}
				</div>
			</div>

			{# ORGANIGRAMMES #}
			<section>
				<div class='row'>
					{% for orga in orgas %}
						{% include 'asso/organigramme/_card.html.twig' %}
					{% else %}
						Personne Ã  afficher
					{% endfor %}
				</div>
			</section>
		</div>
	</div>

	{# MODAL PHOTO #}
	{% include 'photo/_modal.html.twig' %}

{% endblock %}