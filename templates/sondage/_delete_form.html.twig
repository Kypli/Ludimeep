<form
    method="post"
    action="{{ path('sondage_delete', {'id': sondage.id}) }}"
    onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce sondage ? Suppression définitive.');
">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ sondage.id) }}">
    <button class="btn btn-danger">Supprimer</button>
</form>