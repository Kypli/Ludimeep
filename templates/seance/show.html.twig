{% extends 'base.html.twig' %}

{% block title %}Séance{% endblock %}

{% block body %}
    <h1>Séance</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ seance.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ seance.date ? seance.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Duree</th>
                <td>{{ seance.duree ? seance.duree|date('H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('seance') }}">Retour à la liste</a>

    <a href="{{ path('seance_edit', {'id': seance.id}) }}">Modifier</a>

    {{ include('seance/_delete_form.html.twig') }}
{% endblock %}
