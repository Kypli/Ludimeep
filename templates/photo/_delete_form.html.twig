<form
	method="post"
	action="{{ path('photo_delete', {'id': photo.id}) }}"
	onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette photo ? Cette action est irréversible !');
">
	<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ photo.id) }}">
	<button class="btn btn-danger">
		<i class="fas fa-times"></i>
	</button>
</form>
